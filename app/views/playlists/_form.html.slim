= form_for(@playlist) do |f|
  - if @playlist.errors.any?
    #error_explanation
      h2
        = pluralize(@playlist.errors.count, "error")
        |  prohibited this playlist from being saved:
      ul
        - @playlist.errors.full_messages.each do |message|
          li
            = message
  .field
    = f.label :name
    br
    = f.text_field :name
  .actions
    = f.submit
